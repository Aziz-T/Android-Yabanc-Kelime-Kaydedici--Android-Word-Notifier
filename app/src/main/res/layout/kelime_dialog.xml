<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="250dp"
    android:layout_height="220dp"
    android:background="#DDDDDD"
    >
    <TextView
        android:id="@+id/kelime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="Kelime:"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/kelimeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/kelime"
        android:textSize="25dp"
        android:maxLength="14"
        android:padding="5dp"
        android:background="#fff"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/anlam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/kelimeEdit"
        android:padding="5dp"
        android:text="AnlamÄ±:"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/anlamEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/anlam"
        android:textSize="25dp"
        android:maxLength="14"
        android:padding="5dp"
        android:background="#fff"
        android:textColor="#000"/>
    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#C3C3C3"
        android:text="CANCEL"
        android:id="@+id/cancelButon"/>
    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#C3C3C3"
        android:text="OK"
        android:id="@+id/okButon"/>
</RelativeLayout>